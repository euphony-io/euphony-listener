<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="co.jbear.euphony_listener.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_toneFragment"
            app:destination="@id/toneFragment" />
        <action
            android:id="@+id/action_mainFragment_to_messageFragment"
            app:destination="@id/messageFragment" />
        <action
            android:id="@+id/action_mainFragment_to_APICallFragment"
            app:destination="@id/APICallFragment" />
    </fragment>
    <fragment
        android:id="@+id/messageFragment"
        android:name="co.jbear.euphony_listener.fragments.MessageFragment"
        android:label="fragment_message"
        tools:layout="@layout/fragment_message" />
    <fragment
        android:id="@+id/toneFragment"
        android:name="co.jbear.euphony_listener.fragments.ToneFragment"
        android:label="fragment_tone"
        tools:layout="@layout/fragment_tone" />
    <fragment
        android:id="@+id/APICallFragment"
        android:name="co.jbear.euphony_listener.fragments.EuPICallFragment"
        android:label="fragment_api_call"
        tools:layout="@layout/fragment_api_call" />
</navigation>