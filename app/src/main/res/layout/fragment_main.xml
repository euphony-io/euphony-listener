<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainFragment">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Euphony Listener Examples"
        android:textSize="15dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/tone_generator_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tone Receiver"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/title_view"/>

    <Button
        android:id="@+id/msg_receiver_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message Receiver"
        app:layout_constraintTop_toBottomOf="@id/tone_generator_btn"/>

    <Button
        android:id="@+id/api_call_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EuPI CALL TEST"
        app:layout_constraintTop_toBottomOf="@id/msg_receiver_btn"/>




</androidx.constraintlayout.widget.ConstraintLayout>